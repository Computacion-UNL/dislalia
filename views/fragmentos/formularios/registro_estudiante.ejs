<a href="/" class="button" style="margin: 10px;">Volver al inicio</a>
<div class="container">
  <div class="title">Registro Estudiante</div>
  <div class="content">
    <form action="/registro_estudiante" method="POST" id="formEstudiantes" enctype="multipart/form-data">
      <div class="user-details">
        <div class="input-box">
          <span class="details">Nombre</span>
          <input type="text" name="nombre" id="nombre" placeholder="Ingrese su nombre" required>
        </div>
        <div class="input-box">
          <span class="details">Apellido</span>
          <input type="text" name="apellido" id="apellido" placeholder="Ingrese su apellido" required>
        </div>
        <div class="input-box">
          <span class="details">Correo</span>
          <input type="text" name="correo" id="correo" placeholder="example@unl.edu.ec" required>
        </div>
        <div class="input-box">
          <span class="details">Contraseña</span>
          <input type="password" name="password" id="password" placeholder="Ingrese su contraseña" required>
        </div>
        <div class="input-box">
          <span class="details">Ciclo</span>
          <select name="ciclo" id="ciclo">
            <option value="Quinto Ciclo">Quinto Ciclo</option>
            <option value="Sexto Ciclo">Sexto Ciclo</option>
            <option value="Séptimo Ciclo">Séptimo Ciclo</option>
            <option value="Octavo Ciclo">Octavo Ciclo</option>
            <option value="Noveno Ciclo">Noveno Ciclo</option>
            <option value="Decimo Ciclo">Decimo Ciclo</option>
          </select>
        </div>
        <div class="input-box">
          <span class="details">Paralelo</span>
          <select name="paralelo" id="paralelo">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
          </select>
        </div>
        <div class="input-box">
          <div class="tuto_container">
            <div class="tuto_card">
              <div class="imgBx">
                <div class="container_colum_foto">
                  <span class="details">Imagen</span>
                  <h2 id="texto-imagen1" hidden></h2>
                </div>
              </div>
            </div>
          </div>
          <br>
        <input style="padding-top: 5px;" type="file" name="archivo" id="archivo" accept=".jpeg, .jpg" required>
        </div>
      </div>
      <div class="button-registro">
        <input type="submit" value="Registrar">
      </div>
    </form>
  </div>
</div>

<script>

  $(document).ready(function () {

    $.validator.addMethod("soloLetras", function (value, element) {
      return this.optional(element) || /^[a-z\s.A-Z]+$/i.test(value);
    }, "Ingrese solo letras");

    $.validator.addMethod("correoUniversitario", function (value, element) {
      return this.optional(element) || /^[a-z.]+@unl\.edu\.ec$/i.test(value);
    }, "Correo Institucional Incorrecto!");

    $.validator.addMethod("caracteresPermitidos", function (value, element) {
      return this.optional(element) || /^(.*?[A-Z]).(.*?[a-z]).(.*?[0-9])$/i.test(value);
    }, "Debe contener una mayúscula, una minúscula y un número!");


    $("#formEstudiantes").validate({
      rules: {
        nombre: {
          required: true,
          soloLetras: true,
          minlength: 3
        },
        apellido: {
          required: true,
          soloLetras: true,
          minlength: 3
        },
        correo: {
          required: true,
          correoUniversitario: true
        },
        password: {
          required: true,
          minlength: 8,
          caracteresPermitidos: true
        },
      },
      messages: {
        nombre: {
          required: "Este campo es requerido!",
          minlength: "Ingrese al menos 3 caracteres"
        },
        apellido: {
          required: "Este campo es requerido!",
          minlength: "Ingrese al menos 3 caracteres"
        },
        correo: {
          required: "Este campo es requerido!",
          email: "Ingrese su correo institucional"
        },
        password: {
          required: "Este campo es requerido!",
          minlength: "La contraseña debe tener al menos 8 caractéres!"
        },
        archivo:{
          required: "Debe subir una imagen para su perfil"
        }
      }
    });
  });

</script>