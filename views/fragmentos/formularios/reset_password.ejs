<a href="/" class="button" style="margin: 10px;">Volver al inicio</a>
<div class="container_login">
  <div class="wrapper">
    <div class="title"><span>Cambiar Contraseña</span></div>
    <form action="/reset_password" method="POST" id="formularioReset">
      <h4>Ingresa tu correo para recibir un enlace y crear una nueva contraseña:</h4>
      <div class="row_login">
        <i class="fas fa-user"></i>
        <input type="text" name="correo" id="correo" placeholder="example@unl.edu.ec" required>
      </div>
      <br>
      <div class="row_login button_login">
        <input type="submit" value="Enviar Link">
      </div>
    </form>
  </div>
</div>

<script>

  /**
    validar datos de los formularios
    **/
  $(document).ready(function () {

    $.validator.addMethod("correoUniversitario", function (value, element) {
      return this.optional(element) || /^[a-z.]+@unl\.edu\.ec$/i.test(value);
    }, "Correo Institucional Incorrecto!");

    $("#formularioReset").validate({
      rules: {
        correo: {
          required: true,
          correoUniversitario: true
        }
      },
      messages: {
        usuario: {
          required: "Este campo es requerido!",
          email: "Ingrese su correo institucional"
        }
      }
    });
  });


</script>